# For the reverse proxy

VIRTUAL_HOST=myapp.local
#LETSENCRYPT_HOST=myapp.example.org
#LETSENCRYPT_EMAIL=admin@myapp.example.org


# Details for the user who will own the files - for php & nginx.env

USER_NAME=www-data
USER_GROUP=www-data
USER_UID=1000
USER_GID=1000

# Nginx

NGINX_WORKER_PROCESSES=1

# Php

TIMEZONE=Europe/London
PHP_MEMORY_LIMIT=128M
FPM_MODE=dynamic
FPM_START_SERVERS=1
FPM_MAX_CHILDREN=5
FPM_MIN_SPARE_SERVERS=1
FPM_MAX_SPARE_SERVERS=4
FPM_MAX_REQUESTS=500

# Redis

REDIS_MAXMEMORY=128M
REDIS_MAXMEMORY_POLICY=allkeys-lfu

# Mysql - These are cleared by entrypoint.sh on startup (for non mysql services) but it would be better to use docker secrets

MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=myapp
MYSQL_USER=myapp
MYSQL_PASSWORD=password

# The port to bind on localhost for mysql
MYSQL_HOST_PORT=3306
